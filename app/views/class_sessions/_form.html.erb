<%= form_with(model: class_session) do |form| %>
  <% if class_session.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(class_session.errors.count, "error") %> prohibited this class_session from being saved:</h2>

      <ul>
        <% class_session.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-md-4">
      <%= form.label :name, "Nome", style: "display: block", class: "col-md-6 col-form-label text-md-right" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-4">
      <%= form.label :description, "Descrição", style: "display: block", class: "col-md-6 col-form-label text-md-right" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-4">
      <%= form.label :active, "Ativa", style: "display: block", class: "col-md-6 col-form-label text-md-right" %>
      <%= form.check_box :active %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= form.label :start_time, "Hora Inicio", style: "display: block", class: "col-md-6 col-form-label text-md-right" %>
      <%= form.datetime_field :start_time , class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= form.label :end_time, "Hora Fim", style: "display: block", class: "col-md-6 col-form-label text-md-right" %>
      <%= form.datetime_field :end_time , class: "form-control" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-md-2">
      <%= form.label :instructor_id, "Instrutor", style: "display: block" %>
      <% instructor_array = Instructor.all.map { |instructor| [instructor.name, instructor.id] } %>
      <%= form.select :instructor_id, options_for_select(instructor_array), {}, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-2">
      <%= form.label :training_id, "Treino", style: "display: block", class: "col-md-6 col-form-label text-md-right" %>
      <% training_array = Training.all.map { |training| [training.name, training.id] } %>
      <%= form.select :training_id, options_for_select(training_array), {}, class: "form-control" %>
    </div>
  </div>

  </br>

  <div>
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
